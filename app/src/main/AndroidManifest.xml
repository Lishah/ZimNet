<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="samples.android.elisha.com.zimnet">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".ZimNet"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".AccountSetUp"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity
            android:name=".MainActivity"
            android:label="Adverts"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".PostActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".AgricultureSignUp">
        </activity>
        <activity
            android:name=".AgricultureListing"
            android:label="@string/title_activity_agriculture_listing"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".HomeActivity">
        </activity>
        <activity
            android:name=".AutomotiveListings"
            android:label="@string/title_activity_automotive_listings"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".AgricultureProfile">
        </activity>
        <activity
            android:name=".Samples"
            android:label="@string/title_activity_samples"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".AdvertDetails">
        </activity>
        <activity android:name=".Messaging">
        </activity>
        <activity android:name=".ChattingActivity">
        </activity>
        <activity
            android:name=".AdvertPosts"
            android:label="@string/title_activity_advert_posts"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".AutomotiveSignUp">
        </activity>
    </application>

</manifest>